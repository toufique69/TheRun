<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/mback"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:ignore="UselessParent" >

        <Button
            android:id="@+id/startGame"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/sgame"
            android:text="@string/start_game"
            android:textColor="#33b5e5"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        <Button
            android:id="@+id/HighScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/scores"
            android:text="@string/hs"
            android:textColor="#33b5e5"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        <Button
            android:id="@+id/howtoplay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/helpi"
            android:text="@string/how_to_play"
            android:textColor="#33b5e5"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        <Button
            android:id="@+id/About"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/creditl"
            android:text="@string/about"
            android:textColor="#33b5e5"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

    </LinearLayout>

    <Button
        android:id="@+id/exitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/exitbutton1" />

</RelativeLayout>